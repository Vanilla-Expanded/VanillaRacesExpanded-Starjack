<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>VREStarjack_OxygenSensitivity_Mild</defName>
		<label>mild oxygen sensitivity</label>
		<description>This person is slightly averse to oxygen-rich environments. In breathable atmosphere, they experience minor respiratory and neurological strain, accompanied by a subtle discomfort with each breath.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<scenarioCanAdd>false</scenarioCanAdd>
		<initialSeverity>0.001</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="VEF.AnimalBehaviours.HediffCompProperties_StageByVacuum">
				<notVacuumStageIndex>1</notVacuumStageIndex>
				<vacuumStageIndex>0.1</vacuumStageIndex>
				<vacuumResistanceInArmorDisablesHediff>true</vacuumResistanceInArmorDisablesHediff>
				<vacuumResistanceValueToDisable>0.8</vacuumResistanceValueToDisable>
				<reverseVacuumResistanceEffects>true</reverseVacuumResistanceEffects>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				 <becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.1</minSeverity>
				 <becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<postFactor>0.9</postFactor>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<postFactor>0.8</postFactor>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
