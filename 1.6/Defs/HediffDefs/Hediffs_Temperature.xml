<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>VREStarjack_CryostasisHediff</defName>
		<label>cryostasis</label>
		<description>This person does not suffer fatal hypothermia. Instead, their bodies gradually slow down and enter a dormant state when exposed to extreme cold, and they can awaken safely once warmed.</description>
		<defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
		<canApplyDodChanceForCapacityChanges>true</canApplyDodChanceForCapacityChanges>
		<stages>
			<li>
				<label>shivering</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>initial</label>
				<minSeverity>0.04</minSeverity>
				<restFallFactor>1.25</restFallFactor>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>drowsy</label>
				<minSeverity>0.22</minSeverity>
				<restFallFactor>1.5</restFallFactor>
				<hungerRateFactorOffset>-0.1</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>sleep</label>
				<minSeverity>0.3</minSeverity>
				<restFallFactor>2</restFallFactor>
				<hungerRateFactorOffset>-0.65</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.10</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>deep sleep</label>
				<minSeverity>0.6</minSeverity>
				<restFallFactor>2</restFallFactor>
				<hungerRateFactorOffset>-0.98</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

</Defs>